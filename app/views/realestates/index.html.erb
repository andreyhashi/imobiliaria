
<% if !@carousel.empty? %>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li class="first-slide active" data-target="#myCarousel" data-slide-to="0"></li>
    <%= carousel_indicator(@carousel) %>
  </ol>
  <div class="carousel-inner" role="listbox">
    <% @carousel.each do |carousel| %>
      <% if @carousel.first == carousel %>
        <div class="carousel-item active">
      <% else %>
        <div class="carousel-item">
      <% end %>
        <%= image_tag carousel.img.url(:medium) %>
        <div class="container">
          <div class="carousel-caption d-none d-md-block text-left">
            <h1><%= carousel.district %>, <%= carousel.city %> - <%= carousel.state %></h1>
            <p><%= carousel.re_type %> - <%= carousel.category %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<% end %>

<h1><%=t :realestates %></h1>

<div class="row">
  <% @realestates.each do |realestate| %>
    <div class="col-md-4">
      <%= link_to realestate do %>
        <%= image_tag realestate.img.url(:medium) %>
      <% end %>
      <div>
        <%= realestate.re_type %> - <%= realestate.category %>
        <br>
        <%= realestate.district %> - <%= realestate.city %>
        <p><%= number_to_currency realestate.price %></p>
      </div>
    </div>
  <% end %>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to t('add_realestate'), new_realestate_path %>
<% end -%>
