<footer id="footer" class="footer">
  <div class="container container-fluid">
    <div class="row">

      <div class="footer-follow col-md-4">
        <h4><%= t('follow_us') %></h4>
        <ul>
          <% if @agency.present? %>
            <% if @agency.facebook.present? %>
              <li>
                <%= link_to @agency.facebook, target: "_blank" do %>
                  <i class="fa fa-facebook-official fa-3x" aria-hidden="true"></i>
                <% end %>
              </li>
            <% end %>
            <% if @agency.twitter.present? %>
              <li>
                <%= link_to @agency.twitter, target: "_blank" do %>
                  <i class="fa fa-twitter-square fa-3x" aria-hidden="true"></i>
                <% end %>
              </li>
            <% end %>
            <% if @agency.instagram.present? %>
              <li>
                <%= link_to @agency.instagram, target: "_blank" do %>
                  <i class="fa fa-instagram fa-3x" aria-hidden="true"></i>
                <% end %>
              </li>
            <% end %>
            <% if @agency.google_plus.present? %>
              <li>
                <%= link_to @agency.google_plus, target: "_blank" do %>
                  <i class="fa fa-google-plus-square fa-3x" aria-hidden="true"></i>
                <% end %>
              </li>
            <% end %>
          <% else %>
            <li><a href="http://www.facebook.com/guihatano" target="_blank"><i class="fa fa-facebook-official fa-3x" aria-hidden="true"></i></a></li>
            <li><a href="https://twitter.com/guihatano" target="_blank"><i class="fa fa-twitter-square fa-3x"></i></a></li>
            <li><a href="https://www.instagram.com/guihatano/" target="_blank"><i class="fa fa-instagram fa-3x"></i></a></li>
          <% end %>
        </ul>
      </div>
      
      <div class="footer-contact col-md-4">
        <h4><%= t('contact_us') %></h4>
        <% if @agency.present? %>
          <p><i class="fa fa-map-marker"></i> <%= @agency.street_and_number %></p>
          <p> <%= @agency.city_and_state %></p>
          <p><i class="fa fa-phone"></i> <%= @agency.phone %></p>
          <p><%= @agency.email %></p>
        <% end %>
      </div>

      <div class="footer-menu col-md-4">
        <ul>
          <li><%= link_to "Home", root_path %></li>

          <li><%= link_to t('contact'), contact_path %></li>
          <li>
            <%= link_to admin_path do %>
              <i class="fa fa-lock"></i> <%= t('restricted_area') %>
            <% end %>
          </li>
        </ul>
      </div>

    </div>
  </div>
  <div class="copyright">
    <p>Copyright 2017 guiHatano Co. All Rights Reserved</p>
  </div>
</footer>